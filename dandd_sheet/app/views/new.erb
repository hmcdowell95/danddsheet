<h1>Character Sheet!</h1>
<br>
<form action="/new" method="post">
  Class Name<input type="text" name="class_name"><br>
  Name<input type="text" name="name"><br>
  Strength<input type="number" name="strength" min="3" max="20"><br>
  Dexterity<input type="number" name="dexterity" min="3" max="20"><br>
  Constitution<input type="number" name="constitution" min="3" max="20"><br>
  Intelligence<input type="number" name="intelligence" min="3" max="20"><br>
  Wisdom<input type="number" name="wisdom" min="3" max="20"><br>
  Charisma<input type="number" name="charisma" min="3" max="20"><br>
  AC<input type="number" name="ac"><br>
  Hit Points<input type="number" name="hit_points"><br>
  Other info<input type="text" name="info"><br>
  <input type="submit" value="CREATE">
</form>